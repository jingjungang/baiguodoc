<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_list_item_press"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linNewsPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8.0dip"
        android:orientation="vertical">

        <com.ukang.baiyu.views.RoundedImageView
            android:id="@+id/iv_news_pic"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:background="@drawable/user_icon"
            android:scaleType="centerCrop"
            android_custom:riv_border_color="#333333"
            android_custom:riv_border_width="1dip"
            android_custom:riv_corner_radius="4dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8.0dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_news_title"
            style="@style/gray_14_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_news_desc"
            style="@style/black_14_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip">

            <TextView
                android:id="@+id/tv_news_time"
                style="@style/gray_12_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/ib_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/com_icon02"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:layout_toLeftOf="@id/ib_cmt"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hands"
                    android:focusable="true" />

                <TextView
                    style="@style/gray_12_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="12"
                    android:textColor="@color/index_title_color" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>