<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/common_list_item_press" >

    <LinearLayout
        android:id="@+id/linNewsPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8.0dip"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_news_pic"
            android:layout_width="70.0dip"
            android:layout_height="95.0dip"
            android:background="#ffc1c2bf"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="8.0dip"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8.0dip"
        android:layout_toRightOf="@id/linNewsPic"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/black_14_style" />
        <TextView
            android:id="@+id/tv_news_author"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/gray_14_style" />
        <TextView
            android:id="@+id/tv_news_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            style="@style/gray_14_style" />
        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/gray_12_style" />
    </LinearLayout>
</LinearLayout>